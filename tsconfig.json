{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "/types",
		"declarationMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["es2015", "es2017", "dom"],
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "/dist",
		"outFile": "index.js",
		"pretty": true,
		"strict": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"exclude": ["node_modules"]
}
