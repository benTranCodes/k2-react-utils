{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["es2015", "es2017", "dom"],
		"module": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		// "outDir": "./build",
		// "outFile": "./build/index.js",
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es6"
	},
	"exclude": ["node_modules"]
}
